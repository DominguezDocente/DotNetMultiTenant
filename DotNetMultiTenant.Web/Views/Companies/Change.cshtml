@model List<Company>

<h1>Escoge la empresa con la que deseas trabajar</h1>

@if (Model.Count() == 0)
{
    <p>No hay empresas disponibles.</p>
}
else
{
    <form asp-action="Cambiar">
        <div class="list-group">
            @foreach (Company company in Model)
            {
                <button type="submit" asp-route-id="@company.Id" class="list-group-item list-group-item-action">@company.Name</button>
            }
        </div>
    </form>
}